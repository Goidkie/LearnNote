<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/home_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/home_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnNote"
        tools:targetApi="32">

        <activity
            android:name=".activity_fold.AvatarChangeActivity"
            android:launchMode="singleTop"
            android:exported="false" />
        <activity
            android:name=".activity_fold.AddNoteActivity"
            android:exported="false" />
        <activity
            android:name=".activity_fold.MessageShowActivity"
            android:exported="false" />
        <activity
            android:name=".activity_fold.ChangeMessageActivity"
            android:launchMode="singleTop"
            android:exported="false" />
        <activity
            android:name=".activity_fold.ChangePwdActivity"
            android:exported="false" />
        <activity
            android:name=".activity_fold.ManageActivity"
            android:exported="false" />
        <activity
            android:name=".activity_fold.RegisterActivity"
            android:exported="false" />


        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>